[user]
	name = Cedric Meury
	email = cedric@meury.com

[alias]
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=default --max-count=7
	lg = log --pretty=format:\"%C(red)%h%Creset %C(green)%ad%Creset | %s%C(yellow)%d%Creset %C(bold blue)<%an>%Creset\" --graph --date=short
	co = checkout
	ci = commit
	st = status
	br = branch
	type = cat-file -t
	dump = cat-file -p

[merge]
	tool = vimdiff

[diff]
	tool = vimdiff

[difftool]
	prompt = false
