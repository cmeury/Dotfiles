[user]
	name = Cedric Meury
	email = cedric@meury.com

[alias]
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=default --max-count=7
	lg = log --pretty=format:\"%C(red)%h%Creset %C(green)%ad%Creset | %s%C(yellow)%d%Creset %C(bold blue)<%an>%Creset\" --graph --date=iso
	co = checkout
	ci = commit
	st = status
	br = branch
  cp = cherry-pick
	type = cat-file -t
	dump = cat-file -p
	get = "!git fetch && git status"
  put = "!git rebase origin && git push origin master"

[merge]
	tool = meld

[mergetool]	
	keepBackup = false

[diff]
	tool = meld

[difftool]
	prompt = false
[core]
	autocrlf = input
